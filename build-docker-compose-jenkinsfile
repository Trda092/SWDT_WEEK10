pipeline {
    agent any

        stages {
            stage('Initialize Stage') {
                steps {
                    echo 'Initial : Delete containers and images'
                     dir('SWDT_WEEK10') {
                        echo "Current path is  ${pwd()}"
                        sh 'docker-compose down --rmi all --volumes || true'
                     }
                }
            }

            stage('Build Stage'){
                steps {
                    dir('SWDT_WEEK10') {
                        sh "ls"
                        echo "Current path is ${pwd()}"
                        sh "docker-compose build"
                    }
                }
            }
        }
}
