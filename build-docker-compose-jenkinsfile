pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'echo Build in progress.'
                dir('backend-site'){
                sh 'ls'
                sh 'sudo docker build -t backend:v1 .'
                sh 'sudo docker run -d -p 8088:80 backend:v1'
            }
            }
    }
}
}
