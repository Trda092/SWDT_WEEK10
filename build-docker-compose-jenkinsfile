pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'echo Build in progress.'
                sh 'groupadd docker'
                sh 'usermod -aG docker ec2-user'
                sh 'newgrp docker'
                dir('backend-site'){
                sh 'ls'
                sh 'docker build -t backend:v1 .'
                sh 'docker run -d -p 8088:80 backend:v1'
            }
            }
    }
}
}
